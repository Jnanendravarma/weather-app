{
  "version": 2,
  "public": true,
  "builds": [
    { 
      "src": "public/**", 
      "use": "@vercel/static" 
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}